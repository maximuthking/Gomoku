{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@gomoku/common": ["packages/common/dist/types"]
    }
  },
  "include": [
    "gomoku-backend/src/**/*.ts",
    "packages/common/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}